    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Build",
            "program": "${workspaceFolder}/build/build.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch PROD",
            "program": "${workspaceRoot}\\app.js",
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceRoot}/etc/env/.env"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}